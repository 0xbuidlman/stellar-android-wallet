<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/assetImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_toEndOf="@+id/assetImageView"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/assetNameTextView"
            android:text="Stellar Lumens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RegularText"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/assetAmountTextView"
            android:text="16.0000 XLM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LongDescription"
            android:layout_marginTop="@dimen/margin_padding_size_small"
            android:textColor="@color/regularTextColor" />

    </LinearLayout>

    <Button
        android:id="@+id/assetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/PrimaryButtonStyle"
        android:background="@color/blue2"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/text_size_micro"
        android:padding="8dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="Add asset" />

</RelativeLayout>
