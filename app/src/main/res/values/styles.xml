<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textViewStyle">@font/lato_regular</item>
        <item name="android:buttonStyle">@font/lato_regular</item>
    </style>

    <style name="PinActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="actionButtonStyle">@style/Widget.AppCompat.ActionButton</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        <item name="colorControlHighlight">@color/navButtonRippleColor</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="BottomNavigationTheme" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name="TitleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/navigation_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="ShortDescription" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="LongDescription" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_micro</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="RegularText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/regularTextColor</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="BoldText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/regularTextColor</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="RegularWhiteText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/regularWhiteTextColor</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="ListTitleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/listTitleTextColor</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="TabTitle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="elevation">@dimen/actionbar_elevation</item>
        <item name="android:elevation">@dimen/actionbar_elevation</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="PrimaryButtonStyle" parent="ButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/primaryButtonText</item>
        <item name="android:background">@drawable/primary_button</item>
    </style>

</resources>
